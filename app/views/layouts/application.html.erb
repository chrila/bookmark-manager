<!DOCTYPE html>
<html>
  <head>
    <title>Bookmarks</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar">
      <%= link_to 'Bookmark manager', root_path, class: 'navbar-header' %>
      <span class="navbar-separator"></span>
      <%= link_to 'Bookmarks', bookmarks_path, class: 'navbar-link' %>
      <%= link_to 'Categories', categories_path, class: 'navbar-link' %>
      <%= link_to 'Types', bookmark_types_path, class: 'navbar-link' %>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
